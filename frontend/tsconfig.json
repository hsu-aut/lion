{
    "extends": "../tsconfig.base.json",
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "rootDirs": [".", "../shared"],
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "es2020",
        "target": "ES2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@shared/*": [
                "../shared/*"
            ],
            "@shared-services/*": [
                "./src/app/shared/services/*"
            ]
        },
    },
    "references": [
        {
            "path": "../shared"
        }
    ],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
    }
}
