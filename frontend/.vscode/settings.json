{
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "prettier.singleQuote": true,
  "tslint.autoFixOnSave": true,
  "prettier.printWidth": 140,
  "editor.showFoldingControls": "always",
  "editor.wordWrap": "off",
  "eslint.enable": false
  "files.exclude": {
    "**/app/**/*.js.map": true,
    "**/app/**/*.js": {
        "when": "$(basename).ts"
        },
    "typings": true,
    "node_modules": true,
    ".history": true,
    ".vscode": true // this excludes the folder
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/documentation": true
  }
}
